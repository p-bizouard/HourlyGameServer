{% extends 'base.html.twig' %} {% block title %}Hello ServerController!{%
endblock %} {% block body %}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Game {{ game.name }}</h1>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-primary card-outline card-actions">
                    <div class="card-header">
                        <h3 class="card-title">Game actions</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(formEditGame) }}
                        <div class="modal-header">
                            <h4 class="modal-title">Edit game</h4>
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_row(formEditGame.name) }}
                            {{ form_row(formEditGame.image) }}
                            {{ form_row(formEditGame.port) }}
                            {{ form_row(formEditGame.queryport) }}
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button
                                type="button"
                                class="btn btn-default"
                                data-dismiss="modal"
                            >
                                Close
                            </button>
                            {{ form_widget(formEditGame.submit) }}
                        </div>
                        {{ form_end(formEditGame) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content -->

{% endblock %} {% block bottomjavascripts %} {% endblock %}
