{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello ServerController!{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">New server</h1>
        </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
    <div class="container-fluid">
        <div class="row">
        <div class="col-lg-6">
            <div class="card card-primary card-default">
                <div class="card-header">
                  <h3 class="card-title">Create a server</h3>
                </div>
                <div class="card-body p-0">
                    {{ form_start(form) }}

                    <div class="col-lg">{{ form_row(form.game) }}</div>
                    <div class="col-lg">{{ form_row(form.instance) }}</div>
                    <div class="col-lg">{{ form_row(form.name) }}</div>
                    <div class="col-lg">{{ form_row(form.password) }}</div>
                    <div class="col-lg">{{ form_row(form.seed) }}</div>
                    <div class="col-lg">{{ form_row(form.submit) }}</div>

                    {{ form_end(form) }}
                </div>
                <!-- /.card-body -->
              </div>
        </div>
        <!-- /.col-md-6 -->
        <div class="col-lg-6">
            <div class="card">
            <div class="card-header">
                <h5 class="m-0">Help</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Instance</h6>

                <p class="card-text">Vous pourrez modifier le type d'instance plus tard si n√©cessaire</p>
                
                <h6 class="card-title">Password</h6>

                <p class="card-text">A password id required for Valheim servers. If you do not set a password the game will not allow the connection.</p>
            </div>
            </div>
        </div>
        <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
{% endblock %}
