<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
    {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
        {% block stylesheets %}
            {{ encore_entry_link_tags("app") }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags("app") }}
        {% endblock %}
    </head>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <nav
                class="main-header navbar navbar-expand navbar-white navbar-light"
            >
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" class="nav-link">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown show">
                        <a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="true">
                            {{ app.user }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                          <span class="dropdown-item dropdown-header">Account</span>
                          <div class="dropdown-divider"></div>
                          <div class="dropdown-item">
                            <input class="form-control" type="text" disabled value="{{ app.user.id ~ '#' ~ app.user.nickname }}" />
                          </div>
                          <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                        </div>
                      </li>
                  </ul>
            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="{{ path('dashboard') }}" class="brand-link">
                    {#<img
                        src="dist/img/AdminLTELogo.png"
                        alt="AdminLTE Logo"
                        class="brand-image img-circle elevation-3"
                        style="opacity: 0.8"
                    />#}
                    <span class="brand-text font-weight-light">HourlyGameServer</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul
                            class="nav nav-pills nav-sidebar flex-column"
                            data-widget="treeview"
                            role="menu"
                            data-accordion="false"
                        >
                            <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                            {% if app.user.serverUsers | length %}
                                <li class="nav-item menu-open">
                                    <a href="#" class="nav-link active">
                                        <i
                                            class="nav-icon fas fa-tachometer-alt"
                                        ></i>
                                        <p>
                                            Servers
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        {% for serverUser in app.user.serverUsers %}
                                            <li class="nav-item">
                                                <a href="{{ path('server_details', {id: serverUser.server.id}) }}" class="nav-link {% if currentPath == path('server_details', {id: serverUser.server.id}) %}active{% endif %}">
                                                    <i class="far fa-circle nav-icon"></i>
                                                    
                                                    <p>{{ serverUser.server.name }} </p>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a
                                    href="{{ path('server_order') }}"
                                    class="nav-link {% if currentPath == path('server_order') %}active{% endif %}"
                                >
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>Order a server</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <div class="container">
                    {% for label, messages in app.flashes(['success', 'danger', 'warning']) %}
                        {% for message in messages %}
                            <div class="alert fade show alert-dismissible alert-{{ label }}">
                                {{ message|trans|nl2br }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                
                {% block body %}{% endblock %}
            </div>
            <!-- /.content-wrapper -->

            <!-- Main Footer -->
            <footer class="main-footer">
                <!-- To the right -->
                <div class="float-right d-none d-sm-inline">

                </div>
                <!-- Default to the left -->
                <strong
                    >Copyright &copy; 2021
                    <a href="https://hourlygameserver.com">HourlyGameServer</a>.</strong
                >
                All rights reserved.
            </footer>
        </div>
        <!-- ./wrapper -->

        <!-- REQUIRED SCRIPTS -->
        {% block bottomjavascripts %}
        {% endblock %}
    </body>
</html>
